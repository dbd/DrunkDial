<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Name"
        android:layout_weight="0.05"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your name will be visible to others in the same group(s)."
        android:id="@+id/textView"
        android:layout_weight="0.05"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_weight="0.05"
        android:hint="Username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This will be visible to everyone."
        android:id="@+id/textView5"
        android:layout_weight="0.05"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter a password."
        android:id="@+id/textView3"
        android:layout_weight="0.05"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editText3"
        android:layout_height="wrap_content"
        android:hint="Password Match"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please re-enter a password."
        android:id="@+id/textView2"
        android:layout_weight="0.05"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <EditText
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="Phone Number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This will only be visible to others in the same group and those calling."
        android:id="@+id/textView4"
        android:layout_weight="0.05"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp" />

    <Button
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="22dp"
        android:layout_weight="0.10"
        android:onClick="submitInfo"
    />
</LinearLayout>